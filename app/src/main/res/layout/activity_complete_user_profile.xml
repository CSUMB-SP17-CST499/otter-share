<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/complete_user_profile_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.ottershare.ottershare.CompleteUserProfile">

    <ScrollView
        android:id="@+id/complete_user_profile_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/complete_user_profile_cancel_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:drawable/ic_menu_close_clear_cancel"/>


                </RelativeLayout>

            <RelativeLayout
                android:id="@+id/complete_user_profile_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/complete_user_profile_title_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Edit Profile"
                    android:gravity="center"/>

            </RelativeLayout>


            <TableLayout
                android:id="@+id/complete_user_profile_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorsecondDarker"
                android:layout_marginTop="10dp">

                <!-- Add here things to update programatically, or add to the xml what is needed !-->

            </TableLayout>

            <Button
                android:id="@+id/complete_user_profile_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorsecondDark"
                android:text="Submit"
                android:textSize="30dp"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
